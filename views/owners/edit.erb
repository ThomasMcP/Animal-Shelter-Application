<h2>Edit Owner</h2>

<form action="/owners/<%= @owner.id%>" method="post">

  <div class="form-element">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @owner.name %>"/>
  </div>

  <div class="form-element">
    <label for="address"> Address:</label>
    <input type="text" name="address", id="address" value="<%= @owner.address %>" >
  </div>

  <div class="form-element">
      <label for="pet_select">Select Pet:</label>
      <select name="pet_select" id="pet_select">
        <% @animals.each do |animal| %>
            <option value="<% animal.id %>" selected="<%= animal.name%>">
              <%= animal.name %>
            </option>
        <% end %>
      </select>
    </div>


  <div class="form-element">
      <input type="submit" value="Edit Owner"/>
    </div>

</form>
