<h2>Add New Animal</h2>

<!-- <link rel="stylesheet" href="../style.css"> -->
<form action="/animals" method="post">

  <div class="form-element">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name"/>
  </div>

  <div class="form-element">
    <label for="type">Type:</label>
    <input type="text" name="type" id="type"/>
  </div>

  <div class="form-element">
    <label for="breed">Breed:</label>
    <input type="text" name="breed" id="breed"/>
  </div>

  <div class="form-element">
    <label for="adoption_select">Adoption Status:</label>
    <select name="adoption_status", id="adoption_status">
      <% @adopt.each do |selection| %>
      <option value=<%= selection %>><%= selection%>
      </option>
      <% end %>
    </select>
  </div>

  <div class="form-element">
    <label for="day_admitted"> Day Admitted:</label>
    <input type="date" name="day_admitted", id="day_admitted" >
  </div>

  <div class="form-element">
    <label for="age">Age:</label>
    <input type="number" name="age", id="age">
  </div>

  <div class="form-element">
    <input type="submit" value="Add Animal">
  </div>

</form>
